<script>
  document.addEventListener("DOMContentLoaded", function () {
  const form = document.getElementById("studentForm");
  const nameInput = document.getElementById("name");
  const emailInput = document.getElementById("email");
  const phoneInput = document.getElementById("phone");

  if (!form || !nameInput || !emailInput || !phoneInput) {
    console.error("One or more form elements not found!");
    return;
  }

  nameInput.addEventListener("blur", () => validateField(nameInput, /(?:\b\w+\b[\s]*){3,}/));
  emailInput.addEventListener("blur", () => validateField(emailInput, /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/));
  phoneInput.addEventListener("blur", () => validateField(phoneInput, /^\d{11}$/));

  form.addEventListener("submit", (e) => {
    const nameValid = validateField(nameInput, /(?:\b\w+\b[\s]*){3,}/);
    const emailValid = validateField(emailInput, /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/);
    const phoneValid = validateField(phoneInput, /^\d{11}$/);

    if (!nameValid || !emailValid || !phoneValid) {
      e.preventDefault();
      showModal();
    }
  });

  function validateField(input, pattern) {
    if (!pattern.test(input.value.trim())) {
      input.classList.add("invalid");
      input.classList.remove("valid");
      return false;
    } else {
      input.classList.remove("invalid");
      input.classList.add("valid");
      return true;
    }
  }

  function showModal() {
          console.log("showModal() is being called!");  // Debugging log
          const modal = document.getElementById("warningModal");
          const overlay = document.getElementById("modalOverlay");
  
          if (modal && overlay) {
              modal.classList.add("active");
              overlay.classList.add("active");
          } else {
              console.error("Modal elements not found!");
          }
      }
  
      function closeModal() {
          document.getElementById("warningModal").classList.remove("active");
          document.getElementById("modalOverlay").classList.remove("active");
      }
});

</script>


  



























