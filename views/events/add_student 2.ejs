<style>
.formbold-input-group {
  display: grid;
  grid-template-columns: 35% 65%;
  gap: 10px;
  align-items: center;
  margin-bottom: 15px;
}

.formbold-form-label {
  font-weight: 800;
  font-size: 16px;
  color: #333;
}

.formbold-form-input,
.formbold-form-select {
  font-weight: 600;
  border-radius: 8px;
  border: 1px solid #ccc;
  padding: 10px;
  font-size: 14px;
  width: 100%;
  transition: 0.3s;
}

.formbold-form-input:focus,
.formbold-form-select:focus {
  border-color: #007bff;
  outline: none;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
}

.panel-body {
  background: #f9f9f9;
  padding: 20px;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
  max-width: 500px;
  margin: auto;
}

.panel-footer {
  text-align: center;
  margin-top: 15px;
}

.formbold-btn {
  background-color: #007bff;
  color: white;
  border: none;
  padding: 10px 15px;
  font-size: 16px;
  border-radius: 8px;
  cursor: pointer;
  transition: 0.3s;
  width: 100%;
}

.formbold-btn:hover {
  background-color: #0056b3;
}
.page-inner {
  border-radius: 2%;
}
.invalid {
  border: 2px solid red;
}
.valid {
  border: 2px solid green;
}

.modal {
    display: none; /* Hidden by default */
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: white;
    padding: 20px;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
    z-index: 1000;
}

.overlay {
    display: none; /* Hidden by default */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
}

/* Show the modal when 'active' class is added */
.modal.active {
    display: block;
}

.overlay.active {
    display: block;
}


/* Responsive */
@media (max-width: 600px) {
  .formbold-input-group {
    grid-template-columns: 1fr;
  }
}


